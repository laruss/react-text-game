{
    "name": "@react-text-game/utils",
    "version": "0.1.0",
    "description": "Utilities for React Text Game",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "github:laruss/react-text-game",
    "homepage": "https://reacttextgame.dev/",
    "private": false,
    "type": "module",
    "scripts": {
        "dev": "tsc --watch & tsc-alias --watch",
        "build": "tsc && tsc-alias",
        "test": "bun test",
        "check-types": "tsc --noEmit",
        "lint": "eslint .",
        "prepack": "rm -rf dist && bun run build",
        "test-pack": "npm pack --dry-run && bunx publint"
    },
    "author": "laruss",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "license": "MIT",
    "files": [
        "dist"
    ],
    "dependencies": {
    },
    "peerDependencies": {
        "typescript": "^5",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0",
        "@react-text-game/core": "latest"
    },
    "devDependencies": {
        "@react-text-game/core": "workspace:*",
        "@types/bun": "latest",
        "@types/estree": "^1.0.8",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "eslint": "^9.37.0",
        "tsc-alias": "^1.8.16"
    },
    "imports": {
        "#*": "./dist/*"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    }
}
