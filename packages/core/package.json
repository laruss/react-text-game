{
    "name": "@react-text-game/core",
    "version": "0.5.1",
    "description": "A powerful React-based text game engine with reactive state management, passage-based navigation, and persistent save system for building interactive narrative experiences",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "github:laruss/react-text-game",
    "homepage": "https://reacttextgame.dev/",
    "private": false,
    "type": "module",
    "scripts": {
        "dev": "tsc --watch & tsc-alias --watch",
        "build": "tsc && tsc-alias",
        "check-types": "tsc --noEmit",
        "lint": "eslint .",
        "prepack": "rm -rf dist && bun run build",
        "test-pack": "npm pack --dry-run && bunx publint"
    },
    "author": "laruss",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "license": "MIT",
    "files": [
        "dist"
    ],
    "dependencies": {
        "consola": "^3.4.2",
        "crypto-js": "^4.2.0",
        "dexie": "^4.2.0",
        "dexie-react-hooks": "^4.2.0",
        "i18next": "^25.6.0",
        "jsonpath-plus": "^10.3.0",
        "react-i18next": "^16.1.0",
        "valtio": "^2.1.8"
    },
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0",
        "typescript": "^5"
    },
    "devDependencies": {
        "@types/bun": "^1.2.23",
        "@types/crypto-js": "^4.2.2",
        "@types/node": "^24.6.2",
        "@types/react": "^19.0.9",
        "@types/react-dom": "^19.0.3",
        "eslint": "^9.37.0",
        "tsc-alias": "^1.8.16"
    },
    "imports": {
        "#*": "./dist/*"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./saves": {
            "types": "./dist/saves/index.d.ts",
            "import": "./dist/saves/index.js"
        },
        "./passages": {
            "types": "./dist/passages/types/index.d.ts"
        },
        "./i18n": {
            "types": "./dist/i18n/index.d.ts",
            "import": "./dist/i18n/index.js"
        },
        "./audio": {
            "types": "./dist/audio/index.d.ts",
            "import": "./dist/audio/index.js"
        }
    }
}
