{
    "name": "@react-text-game/mdx",
    "version": "0.1.0",
    "description": "MDX support for React Text Game",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "github:laruss/react-text-game",
    "homepage": "https://laruss.github.io/react-text-game/",
    "private": false,
    "type": "module",
    "scripts": {
        "dev": "tsc --watch & tsc-alias --watch",
        "build": "tsc && tsc-alias",
        "test": "bun test",
        "check-types": "tsc --noEmit",
        "lint": "eslint .",
        "prepack": "rm -rf dist && bun run build",
        "test-pack": "npm pack --dry-run && bunx publint"
    },
    "author": "laruss",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "license": "MIT",
    "files": [
        "dist"
    ],
    "dependencies": {
        "estree-util-value-to-estree": "^3.4.0",
        "gray-matter": "^4.0.3",
        "remark-frontmatter": "^5.0.0",
        "vfile": "^6.0.3",
        "yaml": "^2.8.1"
    },
    "peerDependencies": {
        "typescript": "^5",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0",
        "@react-text-game/core": "latest",
        "@mdx-js/mdx": "^3.1.1",
        "@mdx-js/react": "^3.1.1"
    },
    "devDependencies": {
        "@react-text-game/core": "workspace:*",
        "@types/bun": "latest",
        "@types/estree": "^1.0.8",
        "@types/mdast": "^4.0.4",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "eslint": "^9.37.0",
        "mdast-util-mdx": "^3.0.0",
        "mdast-util-to-string": "^4.0.0",
        "remark-mdx": "^3.1.0",
        "tsc-alias": "^1.8.16",
        "unified": "^11.0.5",
        "unist-util-visit": "^5.0.0"
    },
    "imports": {
        "#*": "./dist/*"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./plugin": {
            "types": "./dist/plugins/index.d.ts",
            "import": "./dist/plugins/index.js"
        }
    }
}
