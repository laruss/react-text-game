{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "lib": [
            "esnext"
        ],
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "bun"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "#*": [
                "./src/*.ts",
                "./src"
            ]
        }
    },
    "exclude": [
        "dist",
        "node_modules",
        "frontend"
    ],
    "include": [
        "src"
    ]
}
